@using LibraryProject.DTOs
@model BookDTO

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Add New Book";
}

<h2 class="text-center mb-4">Add New Book</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <form method="post" asp-action="Create" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label"><strong>Title</strong></label>
                <input type="text" class="form-control" asp-for="Title" required />
                <span class="text-danger" asp-validation-for="Title"></span>
            </div>

            <div class="mb-3">
                <label class="form-label"><strong>Author</strong></label>
                <input type="text" class="form-control" asp-for="Author" required />
                <span class="text-danger" asp-validation-for="Author"></span>
            </div>

            <div class="mb-3">
                <label class="form-label"><strong>Price Book</strong></label>
                <input type="text" class="form-control" asp-for="BookPrice" required />
                <span class="text-danger" asp-validation-for="BookPrice"></span>
            </div>

            <div class="mb-3">
                <label class="form-label"><strong>Borrow Price</strong></label>
                <input type="text" class="form-control" asp-for="BorrowingPrice" required />
                <span class="text-danger" asp-validation-for="BorrowingPrice"></span>
            </div>

            <div class="mb-3">
                <label class="form-label"><strong>Genre</strong></label>
                <select class="form-select" asp-for="GenreId" asp-items="ViewBag.Genres" required>
                    <option value="">-- Select Genre --</option>
                </select>
                <span class="text-danger" asp-validation-for="GenreId"></span>
            </div>

            <div class="mb-3">
                <label class="form-label"><strong>Description</strong></label>
                <textarea class="form-control" asp-for="Description" rows="3" required></textarea>
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>

            <div class="mb-3">
                <label class="form-label"><strong>Book Cover Image</strong></label>
                <input type="file" class="form-control" name="imageFile" accept="image/*" required />
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-success">Save</button>
                <a href="/Book/Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
